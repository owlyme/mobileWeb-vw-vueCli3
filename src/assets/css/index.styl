@import "./reset.styl"
body
  color: #303133;
  font-family: MicrosoftYaHei;
*
  box-sizing: border-box
  outline: none
  -moz-outline-style: none
  -webkit-user-drag: none
  
@font-face {
  font-family: 'iconfont';  /* project id 832024 */
  src: url('//at.alicdn.com/t/font_832024_qih02hx784.eot');
  src: url('//at.alicdn.com/t/font_832024_qih02hx784.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_832024_qih02hx784.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_832024_qih02hx784.woff') format('woff'),
  url('//at.alicdn.com/t/font_832024_qih02hx784.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_832024_qih02hx784.svg#iconfont') format('svg');
}
.icon
  font-family:"iconfont" !important;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

// 文字颜色系列
.text-gray6 
  color: #606366
.text-gray9 
  color: #979899
.text-graye 
  color: #e3e4e5
.text-white
  color: #fff
  
// 居中系列
.center{ 
  max-width: 750px;
  margin:0 auto; 
}
.center-absolute-x{
    -webkit-transform: translateX(-50%);
    -moz-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    -o-transform: translateX(-50%);
    transform: translateX(-50%);
    position:absolute;
    left:50%;
}
.center-absolute{
    -webkit-transform: translateX(-50%) translateY(-50%);
    -moz-transform: translateX(-50%) translateY(-50%);
    -ms-transform: translateX(-50%) translateY(-50%);
    -o-transform: translateX(-50%) translateY(-50%);
    transform: translateX(-50%) translateY(-50%);
    position:absolute;
    left:50%;
    top:50%;
}

/*textover*/
.text-over{  /*单行文本溢出省略*/
  overflow:hidden;
  white-space: nowrap;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
}
.text-over2{ /*2行文本溢出省略*/
	overflow:hidden;
	text-overflow: ellipsis;
	display:-webkit-box;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
}
.text-over3{ /*3行文本溢出省略*/
	overflow:hidden;
	text-overflow: ellipsis;
	display:-webkit-box;
	-webkit-line-clamp:3;
	-webkit-box-orient:vertical;
}

/*定位系列*/
.relative{ position:relative; }
.absolute{ 
  position:absolute; 
  left: 0;
  top: 0;
}
.fixed{ 
  position:fixed; 
  left: 0;
  top: 0;
}

/*flex 弹性布局系列*/  
.flex{ display:flex; }
.flex-around{
  display:flex;
  align-items:center;
  justify-content:space-around;
}
.flex-between{
  display:flex;
  align-items:center;
  justify-content:space-between;
}
.flex-center{
  display:flex;
  justify-content:center;
  align-items:center;
}
.flex-end{
  display:flex;
  align-items:center;
  justify-content:flex-end;
}
.flex-start{
	display:flex;
	align-items:center;
	justify-content: flex-start;
}
.flex-column{
  display:flex;
  align-items:center;
  flex-direction: column;
}
.flex-wrap{ flex-wrap:wrap; }
.flex0{ flex:none; }
.flex1{ flex:1; }

/*float  浮动布局系列*/
.fl{ float:left; }
.fr{ float:right }
.clear:after{
  height:0;
  content:"";
  display:block;
  clear:both;
}

/* 盒子模型系列 */
.block { display: block; }
.inline-block { display: inline-block; }
.inline { display: inline; }

/* 其它 */
.fit-cont{  /*元素宽度由内容撑开*/
  width:-webkit-fit-content;
  width:-moz-fit-content;
  width:fit-content;
}
.over-hidden{ overflow:hidden; }
a:focus,
input:focus,
p:focus,
div:focus{
-webkit-tap-highlight-color:rgba(0,0,0,0);
-webkit-user-modify:read-write-plaintext-only; 
}


    